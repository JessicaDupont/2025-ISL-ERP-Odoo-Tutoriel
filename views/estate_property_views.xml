<?xml version="1.0" encoding="utf-8" ?>
<odoo>

<!--actions-->    
    <record id="action_property_list" model="ir.actions.act_window">
        <field name="name">Properties</field>
        <field name="res_model">estate_property</field>
        <field name="view_mode">list</field>
    </record>

    <record id="action_property_add" model="ir.actions.act_window">
        <field name="name">Add new property</field>
        <field name="res_model">estate_property</field>
        <field name="view_mode">form</field>
    </record>

<!--Affichage-->
    <record id="property_list" model="ir.ui.view">
        <field name="name">property.list</field>
        <field name="model">estate_property</field>
        <field name="arch" type="xml">
            <list string="Properties">
                <field name="name"/>
                <field name="postcode"/>
                <field name="date_availability"/>
                <field name="expected_price"/>
                <field name="status"/>
            </list>
        </field>
    </record>
    
    <record id="property_form" model="ir.ui.view">
        <field name="name">property.form</field>
        <field name="model">estate_property</field>
        <field name="arch" type="xml">
            <form string="Property">
            <h1>My new house : <field name="name"/></h1>
            <group>
                <group>
                    <field name="postcode"/>
                    <field name="date_availability"/>
                </group>
                <group>
                    <field name="expected_price"/>
                    <field name="selling_price"/>
                </group>
                <h2>Description :</h2>
                <field name="description"/>
            </group>
            <group>
                <group>
                    <field name="facades"/>
                    <field name="garage"/>
                    <field name="bedrooms"/>
                    <field name="living_area"/>
                </group>
                <group>
                    <field name="garden"/>
                    <field name="garden_area"/>
                    <field name="garden_orientation"/>
                </group>
            </group>
            <group>
                <group>
                    <field name="active"/>
                </group>
                <group>
                    <field name="status"/>
                </group>
            </group>
            </form>
        </field>
    </record>
</odoo>
