<?xml version="1.0" encoding="utf-8" ?>
<odoo>

<!--actions-->    
    <record id="action_estate_property_list" model="ir.actions.act_window">
        <field name="name">properties</field>
        <field name="res_model">estate_property</field>
        <field name="view_mode">list,form</field>
    </record>

<!--Affichage-->
    <record id="view_estate_property_list" model="ir.ui.view">
        <field name="name">properties.list</field>
        <field name="model">estate_property</field>
        <field name="arch" type="xml">
            <list string="Properties">
                <field name="name"/>
                <field name="postcode"/>
                <field name="property_type_id"/>
                <field name="total_area"/>
                <field name="expected_price"/>
            </list>
        </field>
    </record>
    
    <record id="view_estate_property_form" model="ir.ui.view">
        <field name="name">properties.form</field>
        <field name="model">estate_property</field>
        <field name="arch" type="xml">
            <form string="Properties">
                <header>
                    <button name="action_property_sold" type="object" string="Sold"/>
                    <button name="action_property_cancel" type="object" string="Cancel"/>
                    <field name="status" widget="statusbar" statusbar_visible="0,1,2,3" />
                </header>
                <group>
                    <h1>My new house : </h1>
                    <field name="name"/>
                </group>
                <group>
                        <h2>Description :</h2>
                        <field name="description"/>
                </group>
                <group>
                    <group>
                        <field name="postcode"/>
                        <field name="property_type_id"/>
                        <field name="property_tags_ids" widget="many2many_tags"/>
                    </group>
                    <group>
                        <field name="date_availability"/>
                        <field name="expected_price"/>
                        <field name="selling_price"/>
                    </group>
                </group>
                <notebook>
                    <page string="Description">
                        <group>
                            <group>
                                <field name="facades"/>
                                <field name="garage"/>
                                <field name="bedrooms"/>
                                <field name="living_area"/>
                            </group>
                            <group>
                                <field name="garden"/>
                                <field name="garden_area"/>
                                <field name="garden_orientation"/>
                                <field name="total_area"/>
                            </group>
                        </group>
                    </page>
                    <page string="Offers">
                        <field name="best_price"/>
                        <list>
                            <field name="offer_ids"/>
                        </list>
                    </page>
                    <page string="Other info">
                        <group>
                            <field name="seller_id"/>
                            <field name="salesperson_id"/>
                            <field name="buyer_id"/>
                        </group>
                    </page>
                    <page string="Settings">
                        <group>
                            <group>
                                <field name="active"/>
                            </group>
                        </group>
                    </page>
                </notebook>
            </form>
        </field>
    </record>

    <record id="view_estate_property_search" model="ir.ui.view">
        <field name="name">properties.search</field>
        <field name="model">estate_property</field>
        <field name="arch" type="xml">
            <search string="Properties">
                <field name="name"/>
                <field name="property_type_id"/>
                <field name="postcode"/>
                <field name="date_availability"/>
                <field name="expected_price"/>
                <field name="status"/>
                <filter name="available" 
                    domain="['|',
                        ('status', '=', '0'),
                        ('status', '=', '1')]"/>
                <filter name="group by postcode" 
                    context="{'group_by':'postcode'}"/>
            </search>
        </field>
    </record>
</odoo>
